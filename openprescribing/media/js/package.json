{
  "name": "openprescribing",
  "version": "1.0.0",
  "description": "Form and chart app for OpenPrescribing website",
  "author": "Anna Powell-Smith",
  "main": "index.js",
  "scripts": {
    "test": "mocha --require test/setup.js",
    "build-js": "nodejs build.js production",
    "watch-js": "nodejs build.js",
    "build-css": "lessc ../css/index.less > ../../static/css/index.css",
    "build-config": "browserify src/config.js --standalone config -t envify | uglifyjs > ../../static/js/config.min.js",
    "build": "npm run build-config | npm run build-js | npm run build-css",
    "lint": "eslint src/*.js",
    "watch-config": "watchify src/config.js --standalone config -t envify -o ../../static/js/config.js --debug --verbose",
    "watch-css": "when-changed ../css/ 'npm run build-css'",
    "watch": "npm run watch-config | npm run watch-css | npm run watch-js"
  },
  "browser": {
    "select2": "./vendor/select2.full.min.js",
    "noUiSlider": "./vendor/jquery.nouislider.all.js",
    "Highcharts": "./vendor/highcharts.js",
    "Highcharts-export": "./vendor/highcharts-export.js",
    "Highcharts-more": "./vendor/highcharts-more.js"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "Highcharts": {
      "exports": "Highcharts"
    }
  },
  "eslintConfig": {
    "extends": "eslint-config-google",
    "env": {
      "node": true,
      "commonjs": true,
      "jquery": true,
      "browser": true,
      "mocha": true
    }
  },
  "dependencies": {
    "bootstrap": "^3.3.4",
    "chroma-js": "^1.2",
    "clipboard": "^1.5.12",
    "cookies-js": "1.2.3",
    "downloadjs": "^1.4.7",
    "factor-bundle": "^2.5.0",
    "handlebars": "4.0.5",
    "humanize": "^0.0.9",
    "jquery": "^1.11.3",
    "mapbox.js": "^2.2.1",
    "moment": "^2.10.3",
    "uglify-js": "^3.2.2",
    "uglifyify": "^4.0.5",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "browserify": "^9.0.8",
    "browserify-shim": "~3.2.0",
    "chai": "^2.3.0",
    "jsdom": "^11.2.0",
    "eslint": "latest",
    "eslint-config-google": "latest",
    "less": "^2.5.1",
    "mocha": "^2.2.5",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.2.1",
    "envify": "^3.4.1"
  }
}
